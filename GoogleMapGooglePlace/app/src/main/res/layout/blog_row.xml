<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/post_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">


            <TextView
                android:id="@+id/post_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/post_userimage"
                android:layout_toEndOf="@+id/post_userimage"
                android:fontFamily="sans-serif-medium"
                android:text="Name"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/post_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/post_place"
                android:layout_below="@+id/post_place"
                android:fontFamily="sans-serif"
                android:text="11 hrs"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/post_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_id"
                android:layout_toEndOf="@+id/post_userimage"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:text="place" />

            <ImageView
                android:id="@+id/post_userimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/side_nav_bar" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_btn" />


        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"

            android:text="The Post Description"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="評價星星"
            android:textSize="12sp" />


    </LinearLayout>

</android.support.v7.widget.CardView>